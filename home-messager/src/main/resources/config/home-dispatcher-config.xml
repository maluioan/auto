<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="wsBoardStompHandler" class="com.home.automation.dispatcher.wsclient.WsBoardStompSessionHandler" />

    <bean id="wsBoardClient" class="com.home.automation.dispatcher.wsclient.WsBoardClient">
        <property name="sessionHandler" ref="wsBoardStompHandler"/>
        <property name="url" value="${board.server.ws.endpoint}"/>
        <property name="timeout" value="${board.server.ws.timeout}"/>
    </bean>

    <bean class="com.home.automation.dispatcher.wsclient.WsClientConnectionScheduler">
        <constructor-arg ref="wsBoardClient"/>
    </bean>
</beans>